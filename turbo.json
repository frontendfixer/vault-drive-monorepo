{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**", ".output/**"]
    },

    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },

    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false
    },

    "format": {
      "dependsOn": ["^format"],
      "cache": false
    },

    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "dev:api": {
      "cache": false,
      "persistent": true
    },

    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
